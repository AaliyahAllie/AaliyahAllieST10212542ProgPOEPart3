<Window x:Class="AaliyahAllieST10212542ProgPOEPart3.ClearRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Clear Recipe" Height="150" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Select Recipe to Clear:" Grid.Row="0" HorizontalAlignment="Center"/>
        <ComboBox x:Name="RecipeComboBox" Grid.Row="1" Margin="10" HorizontalAlignment="Center" Width="150"/>
        <Button Content="Clear Recipe" Grid.Row="2" Margin="10" HorizontalAlignment="Center" Width="100" Click="ClearRecipeButton_Click"/>
    </Grid>
</Window>
