<Window x:Class="AaliyahAllieST10212542ProgPOEPart3.ResetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reset Recipe" Height="200" Width="300"
        Background="CornflowerBlue">
    <!--Allows a user to select a recipe to reset-->
    <Grid>
        <!--Prompts user to select a recipe-->
        <Label Content="Select Recipe to Reset:" Grid.Row="0" HorizontalAlignment="Center"/>
        <!--Displays a selection of recipe names to choose from in a combobox-->
        <ComboBox x:Name="RecipeComboBox" Width="200" Height="30" VerticalAlignment="Top" Margin="50,30,50,0"/>
        <!--This button will reset the values back to its original value-->
        <Button Name="ResetButton" Content="Reset" Width="100" Height="30" VerticalAlignment="Top" Margin="100,80,100,0" Click="ResetButton_Click" Background="DarkCyan"/>
    </Grid>
</Window>
