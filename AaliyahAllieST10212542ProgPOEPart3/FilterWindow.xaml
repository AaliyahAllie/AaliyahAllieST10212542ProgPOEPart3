<Window x:Class="AaliyahAllieST10212542ProgPOEPart3.FilterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Filter Recipes" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Filter Controls -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Label Content="Ingredient:"/>
            <TextBox x:Name="txtIngredientFilter" Width="150" Margin="5"/>
            <Label Content="Food Group:" Margin="5"/>
            <ComboBox x:Name="cmbFoodGroupFilter" Width="150" Margin="5"/>
            <Label Content="Max Calories:" Margin="5"/>
            <TextBox x:Name="txtMaxCalories" Width="80" Margin="5"/>
            <Button Content="Apply Filters" Click="ApplyFilters_Click" Margin="5"/>
        </StackPanel>

        <!-- Display Filtered Recipes -->
        <ListBox x:Name="listBoxRecipes" Grid.Row="1" Margin="10"/>

    </Grid>
</Window>
